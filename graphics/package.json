{
  "name": "graphics",
  "scripts": {
    "clean": "rimraf build",
    "build:js": "babel **/*.js -d build --ignore node_modules",
    "copy:html": "copyfiles **/*.html build",
    "copy:css": "copyfiles **/*.css  build",
    "copy:img": "copyfiles **/*.gif **/*.jpg **/*.png build",
    "prebuild": "npm run clean",
    "build": "run-p build:*",
    "postbuild": "run-p copy:*",
    "watch": "run-p watch:*",
    "watch:js": "onchange **/*.js -e build/** -- npm run build:js",
    "watch:html": "onchange **/*.html -e build/** -- npm run copy:html",
    "watch:css": "onchange **/*.css -e build/** -- npm run copy:css"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "copyfiles": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.5.4",
    "onchange": "^3.3.0"
  }
}
